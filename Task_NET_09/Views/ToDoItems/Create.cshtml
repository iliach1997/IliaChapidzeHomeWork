@model GetToDuItemViewModel

<h2>Create to do list</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
      
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" }) 
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "control-label" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IsComplete, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.IsComplete, new { htmlAttributes = new { @class = "form-check-input" } })
        @Html.ValidationMessageFor(model => model.IsComplete, "", new { @class = "control-label" })
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
